<h1> Welcome Dr. <%= @doctor.name %>! </h1> 
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<h3> Current Patients: </h3>
<table>
  <tr>
    <td>
      Patient Name
    </td>
    <td>
      Age
    </td>
    <td>
      Address
    </td>
    <td>
      Attachments
    </td>
  </tr>
  <tr>
    <% @doctor.patients.each do |p| %>
      <td>
        <%= link_to p.name, "patients/#{p.id}" %>
      </td>
      <td>
        <%= p.age %>
      </td>
      <td>
        <%= p.address %>
      </td>
      <td>
        <%= p.file %>
      </td>
    <% end %>
  </tr>
</table>

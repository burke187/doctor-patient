<h1> Welcome <%= @patient.name %>! </h1>

<p id="notice"><%= notice %></p>
<div class="tbl-header">
  <table cellpadding="0" cellspacing="0" border="0">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Attachments</th>
      </tr>
    </thead>
  </table>
</div>
<div class="tbl-content">
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody>
      <tr>
        <td><%= @patient.name %></td>
        <td><%= @patient.age %></td>
        <td><%= @patient.address %></td>
        <% if !!@patient.file %>
          <td><%= image_tag @patient.file.url(:thumb) %></td>
        <% end %>
    </tr>
  </tbody>
</table>
</div>

<h3> Upload documents </h3>

<%= form_for @patient, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

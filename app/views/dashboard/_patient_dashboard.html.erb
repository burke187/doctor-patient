<h1> Welcome <%= @patient.name %>! </h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>

<p>
  <strong>Address:</strong>
  <%= @patient.address %>
</p>

<p>
  <strong>Doctor:</strong>
  <%= @patient.doctor.name %>
</p>

<p>
  <stong>Attachments:</stong>
  <%= image_tag @patient.file.url(:thumb) %>
</p>

<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>


<h3> Upload documents </h3>

<%= form_for @patient, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
